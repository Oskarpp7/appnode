# Configuració desenvolupament
NODE_ENV=development
DB_HOST=localhost
DB_PORT=3000
FRONTEND_PORT=5173
JWT_SECRET=development_secret_key_change_in_production
LOG_LEVEL=debug

# Base de dades
DB_FILE=database.sqlite
DB_BACKUP_ENABLED=true

# Phase 2 features flags
FEATURE_ATTENDANCE_REALTIME=true
FEATURE_AUTO_BILLING=false
FEATURE_PUSH_NOTIFICATIONS=false
FEATURE_QR_SCANNER=false
FEATURE_OFFLINE_MODE=false

# WebSockets configuració
WEBSOCKET_PORT=3001
WEBSOCKET_ENABLED=false

# Facturació automàtica
BILLING_PRICE_PER_ATTENDANCE=7.54
BILLING_TAX_RATE=0.21
BILLING_CURRENCY=EUR

# Notificacions
NOTIFICATION_PROVIDER=mock
EMAIL_ENABLED=false
SMS_ENABLED=false

# Desenvolupament i debug
DEBUG_MODE=true
MOCK_DATA_ENABLED=true
DISABLE_AUTH_FOR_TESTING=false
